{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
       
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        
            "overrides": [
              {
                "files": [
                  "**/*.test.js",
                  "**/*.test.jsx"
                ],
                "env": {
                  "jest": true
                }
              }
            ]
          
    }
}
